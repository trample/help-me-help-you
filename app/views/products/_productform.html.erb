<%= form_for(@product) do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %><br />
		<%= f.label :description %><br />
		<%= f.text_area :description %><br />
		<%= f.label :category %>
		<%= f.text_field :category %><br />
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>